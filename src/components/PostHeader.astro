---
import { slugify, formatDate } from "../js/utils";
import { Image } from "astro:assets";

const { title, pubDate, author, image, category } = Astro.props;
---

<small>
  <a href={`/category/${slugify(category)}`}>{category}</a>
</small>
<h1 class="main-title title">{title}</h1>
<p>
  By <a href={`/author/${slugify(author)}`}>{author}</a> | {formatDate(pubDate)}
</p>
<Image
  src={image.url}
  alt={image.alt}
  width={1200}
  height={600}
  format="webp"
/>
